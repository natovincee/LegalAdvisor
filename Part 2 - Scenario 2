import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.WebDriverWait;
import org.openqa.selenium.support.ui.ExpectedConditions;
import java.time.Duration;

public class NegativeLoginTest {

    public static void main(String[] args) {

        WebDriver driver = new ChromeDriver();
        WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(10));

        try {
            driver.get("https://www.saucedemo.com/");
            driver.manage().window().maximize();

            // ========== 1. Locked Out User ==========
            driver.findElement(By.id("user-name")).sendKeys("locked_out_user");
            driver.findElement(By.id("password")).sendKeys("secret_sauce");
            driver.findElement(By.id("login-button")).click();

            validateErrorMessage(driver,
                "Epic sadface: Sorry, this user has been locked out.");

            resetLogin(driver);

            // ========== 2. Blank Username ==========
            driver.findElement(By.id("password")).sendKeys("secret_sauce");
            driver.findElement(By.id("login-button")).click();

            validateErrorMessage(driver,
                "Epic sadface: Username is required");

            resetLogin(driver);

            // ========== 3. Blank Password ==========
            driver.findElement(By.id("user-name")).sendKeys("standard_user");
            driver.findElement(By.id("login-button")).click();

            validateErrorMessage(driver,
                "Epic sadface: Password is required");

            System.out.println("NEGATIVE LOGIN TESTS PASSED");

        } finally {
            driver.quit();
        }
    }

    private static void validateErrorMessage(WebDriver driver, String expectedMessage) {
        WebElement error = new WebDriverWait(driver, Duration.ofSeconds(5))
                .until(ExpectedConditions.visibilityOfElementLocated(
                        By.cssSelector("h3[data-test='error']")
                ));
        assert error.getText().equals(expectedMessage)
                : "Expected: " + expectedMessage + " but got: " + error.getText();
    }

    private static void resetLogin(WebDriver driver) {
        driver.findElement(By.id("user-name")).clear();
        driver.findElement(By.id("password")).clear();
    }
}
